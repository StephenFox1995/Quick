<html ng-app="signUp">
<head>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.17/angular.min.js"></script>
    <script src="../javascripts/signUp.js"></script>
    <% include /partials/header %>
    <title>
        Index Page
    </title>
</head>

<body>
<div ng-controller="SignUpController">


    <h1>Create an account!</h1>
    <p>Email</p>
    <input type="text" ng-model="httpBody.user.email">
    <p>Firstname</p>
    <input type="text" ng-model="httpBody.user.firstname">
    <p>Lastname</p>
    <input type="text" ng-model="httpBody.user.lastname">
    <p>Password</p>
    <input type="text" ng-model="httpBody.user.password">
    <button type="submit"
            ng-click="signUp()"
            ng-model="signUpModel.endPoint"
            ng-init="signUpModel.endPoint='/user'">Create Account</button >
    {{message}}
</div>

</body>
</html>

