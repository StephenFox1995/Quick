<html ng-app="signUp">
<head>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.17/angular.min.js"></script>
    <script src="../javascripts/signUp.js"></script>
    <script src="../javascripts/session.js"></script>
    <script src="../javascripts/routes.js"></script>
    <% include /partials/header %>
    <title>
        Sign Up
    </title>
</head>

<body>
<div ng-controller="SignUpController" ng-init="endPoint='/user'">
    <h1>Create an account!</h1>
    <p>Email</p>
    <input type="text" ng-model="httpBody.user.email">
    <p>Firstname</p>
    <input type="text" ng-model="httpBody.user.firstname">
    <p>Lastname</p>
    <input type="text" ng-model="httpBody.user.lastname">
    <p>Password</p>
    <input type="text" ng-model="httpBody.user.password">
    <button type="submit" ng-click="signUp()"
    Create Account</button >
    {{message}}
</div>

</body>
</html>

