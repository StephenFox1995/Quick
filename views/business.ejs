<html ng-app="business">
<head>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.17/angular.min.js"></script>
    <script src="../javascripts/business.js"></script>
    <title>
        Index Page
    </title>
</head>

<body>

<div ng-controller="productsController">
    <table>
        <thead>
        <tr>
            <td>Name</td>
            <td>Description</td>
            <td>Price</td>
        </tr>
        </tr>
        </thead>

        <tbody>
        <tr ng-repeat="product in products">
            <td>{{product.name}}</td>
            <td>{{product.description}}</td>
            <td>{{product.business_id}}</td>
        </tr>
        </tbody>
    </table>
</div>

</body>
</html>