<html ng-app="business">
<head>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.17/angular.min.js"></script>
    <script src="../javascripts/business.js"></script>
    <title>
        Index Page
    </title>
</head>

<body>
<div ng-controller="productsController">
    <h1>{{message}}</h1>
    <h1>Add A product</h1>
    <p>Name</p>
    <input type="text" ng-model="newProduct.name">
    <p>Price</p>
    <input type="text" ng-model="newProduct.price">
    <p>Description</p>
    <input type="text" ng-model="newProduct.description">

    <button type="submit" ng-click="addProduct()">Add Product!</button >

</div>
</body>
</html>